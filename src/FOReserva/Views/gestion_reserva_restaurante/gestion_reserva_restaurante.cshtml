@model FOReserva.Models.Restaurantes.Cvista_restaurante

<div class="heading-title">
    <h3><span>Restaurante</span></h3>
</div>
@using (Html.BeginForm("buscar_restaurante", "gestion_reserva_restaurante", null, FormMethod.Post, new { @id = "formBuscarRestaurante", @class = "form-horizontal" }))
{ 

    <fieldset>
                                    <!-- required [php action request] -->
         <input type="hidden" name="action" value="contact_send" />
             <div class="row">

                 <div class="col-lg-12">
                       <center> ¡Reserva en los mejores restaurantes de tu ciudad!</center>
                  </div>
              </div>
             <div class="row">
                <div class="col-lg-12">
                    <center>
                        <div class="input-group top_separate" style="width:100%;">
                            <div class="form-group-md">
                                <select class="form-control rest_sel" data-selected="" style="width:20%;">
                                    <option value="0">Bucar por:</option>
                                    <option value="1">Ciudad</option>
                                    <option value="2">Restaurante</option>
                                 </select>
                                  @Html.TextBoxFor(m => m._nombre, null, new { @class = "form-control required", @name = "contact[first_name]" })
                             </div>
                         </div>
                     </center>
                  </div>
              </div>
    </fieldset>
     <div class="row text-center">
        <div class="col-md-12">
            <button type="button" id="buscar_restaurante" class="btn btn-primary">Buscar</button>
        </div>
    </div>
    <script>
        $("#buscar_restaurante").click(function (e) {
        e.preventDefault();
        var form = $("#formBuscarRestaurante");
        $.ajax({
            url: "gestion_reserva_restaurante/buscar_restaurante",
            data: form.serialize(),
            type: 'POST',
            success: function (data) {
                //alert("Buscando...");
                /*$('#formBuscarVuelos')[0].reset();*/
            }
        });
    });
</script>                                                                                                                                                            }


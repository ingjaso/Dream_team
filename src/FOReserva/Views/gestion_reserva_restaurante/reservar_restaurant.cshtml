                            <input type="text" name="" value="" class="form-control" data-format="" data-lang="en" data-rtl="false" placeholder="Ingrese su nombre">
                        </div>
                        <div class="form-group">

                            <label>Fecha: </label>
                            <input type="text" name="contact[start_date]" value="" class="form-control datepicker required" data-format="yyyy-mm-dd" data-lang="en" data-rtl="false" placeholder="Selecciona la fecha">
                        </div>
                        <div class="form-group">
                            <label>Hora:</label>
                            <select name="contact[position]" class="form-control pointer required">
                                <option value="" selected>Selecciona la hora:</option>
